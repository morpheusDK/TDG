<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    tools:context=".InterpreteVoz">


    <ImageButton
        android:id="@+id/btn_microfono"
        android:layout_width="95dp"
        android:layout_height="103dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="114dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="104dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/microfono" />

    <EditText
        android:id="@+id/palabra"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_microfono"
        android:layout_alignBottom="@+id/btn_microfono"
        android:layout_marginEnd="-113dp"
        android:layout_marginBottom="-59dp"
        android:hint="Ingrese la palabra aquÃ­"
        android:inputType="textAutoComplete"
        android:paddingLeft="40dp"
        android:textDirection="firstStrong"
        android:textSize="18sp"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="131dp"
        android:layout_height="109dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="172dp"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="-60dp"
        android:src="@mipmap/ic_launcher" />

</RelativeLayout>